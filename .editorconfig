# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{js,ts,cjs}]
indent_size = 2

[*.nix]
indent_size = 2

[Makefile]
indent_style = tab

[*.neon]
indent_style = tab

